<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zahraa Yarnn</title>
</head>
<body>
    <%- include('../partials/navbar') %>
    <h1>Product Details</h1>
    <img src="<%= foundProduct.image %>" alt="Product Image" style="max-width:150px;">
    <p><strong><%= foundProduct.productName %></strong> </p>
    <p>Price: <%= foundProduct.price %></p>
    <p><%= foundProduct.description %></p>

    <form action="/cart/add/<%= foundProduct._id %>" method="post">
        <label for="quantity">Quantity:</label>
        <select id="quantity" name="quantity">
            <% for (let i = 1; i <= 10; i++) { %>
                <option value="<%= i %>"><%= i %></option>
            <% } %>
        </select>
        <button type="submit">Add to Cart</button>
    </form>
   
    <% if ( userRole.role === 'admin') { %>
      <a href="/products/<%= foundProduct._id  %>/edit">Update</a>
      <form action="/products/<%= foundProduct._id  %>?_method=delete" method="post">
          <button type="submit">Delete</button>
        </form>
        <% } %>
        
</body>
</html>